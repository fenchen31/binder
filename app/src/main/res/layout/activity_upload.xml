<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VedioActivity">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@mipmap/ic_back"/>
    <com.example.common.view.GradientBorderView
        android:id="@+id/gradient_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:border_width="1dp"
        app:corners="2dp"
        app:gradient_startColor="@color/color_FF03DAC5"
        app:gradient_endColor="@color/color_A9ECE5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_beautiful_girl"
        android:background="@drawable/shape_radius2"
        app:layout_constraintStart_toStartOf="@id/gradient_view"
        app:layout_constraintEnd_toEndOf="@id/gradient_view"
        app:layout_constraintBottom_toBottomOf="@id/gradient_view"
        app:layout_constraintTop_toTopOf="@id/gradient_view"/>
    <View
        android:id="@+id/view_scan"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/color_03DAC5"
        app:layout_constraintStart_toStartOf="@id/gradient_view"
        app:layout_constraintEnd_toEndOf="@id/gradient_view"
        app:layout_constraintTop_toTopOf="@id/gradient_view"
        />
    <TextView
        android:id="@+id/tv_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="10 second ago"
        android:textSize="20sp"
        android:textColor="@color/color_03DAC5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gradient_view"
        android:layout_marginTop="20dp"/>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        android:layout_marginTop="10dp"
        android:progress="50"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progress_upload"/>
    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/color_03DAC5"
        android:text="54%"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/progress_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>